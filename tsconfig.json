{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "types": [
      "node",
      "@capacitor/core",
      "@capacitor-firebase/messaging",
      "@capacitor/app",
      "@capacitor-community/http",
      "react",
      "react-dom"
    ],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "android",
    "ios"
  ]
}